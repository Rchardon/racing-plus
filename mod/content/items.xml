<!-- The "id" field is used to put the items on the death screen. -->
<?xml-model href="https://wofsauge.github.io/isaac-xml-validator/xsd/items.xsd" ?>
<items gfxroot="gfx/items/" version="1" deathanm2="gfx/death items.anm2">
  <!-- +++++++++++++ -->
  <!-- Utility items -->
  <!-- +++++++++++++ -->

  <passive name="Trophy" description="Congratulations!" gfx="Trophy.png" hidden="true" tags="quest" />
  <passive name="Checkpoint" description="On to the next character!" gfx="Checkpoint.png" hidden="true" tags="quest" id="1" />
  <passive name="Reset" description="Reset to the first character" gfx="questionmark.png" hidden="true" tags="quest" />
  <active name="Debug" description="Something went wrong" gfx="Debug.png" maxcharges="0" hidden="true" tags="quest" />

  <!-- ++++++++++++ -->
  <!-- Custom items -->
  <!-- ++++++++++++ -->
  <!-- (see "SERVER_COLLECTIBLE_ID_TO_COLLECTIBLE_TYPE_MAP") -->

  <!-- Server Collectible ID: 1001 -->
  <passive name="13 Luck" description="An explosive amount of luck" gfx="13_Luck.png" quality="4" cache="luck" hidden="true" id="2" />

  <!-- Server Collectible ID: 1002 -->
  <passive name="15 Luck" description="A fantastic amount of luck" gfx="15_Luck.png" quality="4" cache="luck" hidden="true" id="3" />

  <!-- Server Collectible ID: 1003 -->
  <familiar name="Sawblade" description="Slice your enemies" gfx="Sawblade.png" quality="4" hidden="true" id="4" />

  <!-- ++++++++++++++++++++ -->
  <!-- Vanilla replacements -->
  <!-- ++++++++++++++++++++ -->

  <!-- 191 -->
  <passive name="3 Dollar Bill (Seeded)" cache="all" description="Rainbow tears" gfx="Collectibles_191_3DollarBill.png" hidden="true" id="5" />

  <!-- 194 -->
