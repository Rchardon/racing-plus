  <!-- 588 -->
  <passive name="Sol (Custom)" gfx="Collectibles_588_Sol.png" description="Radiant victory" hidden="true" id="7" />

  <!-- 711 -->
  <active name="Flip (Custom)" gfx="Collectibles_711_Flip.png" description="Twist of fate" maxcharges="6" hidden="true" id="8" />

  <!-- ++++++++++++ -->
  <!-- Placeholders -->
  <!-- ++++++++++++ -->
  <!--
    These can be awarded to the player after a D4 roll, but there is no known tag besides "hidden"
    that will accomplish this. ("noeden" and "quest" do not seem to have any effect.) We cannot make
    the items hidden because we need them to randomly appear in the Treasure Room pool.
  -->

  <!-- 12 -->
  <passive name="Magic Mushroom Placeholder" description="" gfx="questionmark.png" quality="4" tags="noeden offensive" />

  <!-- 168 -->
